@using JobList.Models;

<h1>Current Job Openings</h1>
@if (Model.Count == 0)
{
  <p>There are no openings in the list.</p>
}
<ul>
  @foreach (Opening opening in Model)
  {
      <li><a href='/openings/@opening.Id'>@opening.Title</a></li>
  }
</ul>


<a href="/openings/new">Add a new opening.</a>

<form action="/openings/delete" method="post">
  <button type="submit" name="button">Clear All Openings</button>
</form>